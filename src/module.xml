<module id="haxeui-core" priority="-2">
	<resources>
		<resource path="../../assets" prefix="themes" />
	</resources>
	<components>
		<class package="ui" />
		<class package="ui.sidebars" />
	</components>
	<themes>
		<keyboard-editor-theme parent="dark">
			<style resource="themes/css/global.css" />
			<style resource="themes/css/sidebars.css" />
			<style resource="themes/css/mode-selector.css" />
			<style resource="themes/css/status.css" />
			<style resource="themes/css/tabs.css" />

			<var name="solid-background-color" value="#040713" />
			<var name="secondary-background-color" value="#131322" />
			<var name="tertiary-background-color" value="#08090c" />
			<var name="button-background-color" value="#1e1e36" />
			<var name="button-hover-background-color" value="#323256" />

			<var name="normal-text-color" value="#ffffff" />
			<var name="hover-text-color" value="#ffffff" />
			<var name="down-text-color" value="#ffffff" />
			<var name="selection-text-color" value="#ffffff" />
			<!-- accent -->
			<var name="accent-color" value="#3c4bc5" />
			<var name="accent-color-darker" value="#2d346a" />
			<var name="accent-color-lighter" value="#407dbf" />
		</keyboard-editor-theme>
	</themes>
</module>
