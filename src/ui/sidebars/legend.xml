<vbox width="160" height="100%" style="padding: 4px; background-color: #1d2021;">
	<label text="Legends:" />
	<hbox height="100%" width="156px" horizontalAlign="center" verticalAlign="center">
		<scrollview width="153px" height="100%" contentWidth="100%" autoHideScrolls="true" onmousewheel="event.cancel();">
			<vbox width="100%" horizontalAlign="center" verticalAlign="center">
				<tabview width="150px" height="580" closable="true">
					<vbox text="Legend">
						<label text="Legend text:" verticalAlign="center" />
						<textfield width="128" placeholder="U1" />
						<dropdown text="Select a font:">
							<data>
								<item text="Noto" />
								<item text="Roboto" />
								<item text="Tahoma" />
								<item text="Consolas" />
								<item text="Din-D" />
								<item text="Vera-Sans" />
							</data>
						</dropdown>
						<hbox horizontalAlign="left">
							<label text="Font size:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="9" step="1" min="5" max="144"/>
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Text position:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="8" step=".1" min="-32767" max="32768" precision="2" />
							<number-stepper width="133" pos="8" step=".1" min="-32767" max="32768" precision="2" />
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Rotation anchor:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="0" step=".1" min="-32767" max="32768" precision="2" />
							<number-stepper width="133" pos="0" step=".1" min="-32767" max="32768" precision="2" />
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Legend angle:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="0" step="22.5" min="0" max="359" precision="2" />
						</vbox>
					</vbox>
					<vbox text="underLegend">
						<label text="Legend text:" verticalAlign="center" />
						<textfield width="128" placeholder="U2 V." />
						<dropdown text="Select a font:">
							<data>
								<item text="Noto" />
								<item text="Roboto" />
								<item text="Tahoma" />
								<item text="Consolas" />
								<item text="Din-D" />
								<item text="Vera-Sans" />
							</data>
						</dropdown>
						<hbox horizontalAlign="left">
							<label text="Font size:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="9" step="1" min="5" max="144"/>
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Text position:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="8" step=".1" min="-32767" max="32768" precision="2" />
							<number-stepper width="133" pos="8" step=".1" min="-32767" max="32768" precision="2" />
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Rotation anchor:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="0" step=".1" min="-32767" max="32768" precision="2" />
							<number-stepper width="133" pos="0" step=".1" min="-32767" max="32768" precision="2" />
						</vbox>
						<hbox horizontalAlign="left">
							<label text="Legend angle:" />
						</hbox>
						<vbox horizontalAlign="left">
							<number-stepper width="133" pos="0" step="22.5" min="0" max="359" precision="2" />
						</vbox>
					</vbox>
				</tabview>
			</vbox>
		</scrollview>
	</hbox>
</vbox>
